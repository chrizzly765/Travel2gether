<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="www.traveltogether.de.traveltogether.login.LoginActivity"
    android:background="#37a9e3">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="false">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imgLogo"
            android:src="@drawable/LogoMitSchrift"
            android:layout_weight="1.2"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20pt" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:paddingTop="10pt">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <EditText
                    android:layout_width="120pt"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/editText"
                    android:hint="E-Mail"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    style="color"
                    android:singleLine="false"
                    android:backgroundTint="#ffffff"
                    android:layout_gravity="center_horizontal" />

                <EditText
                    android:layout_width="120pt"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/editText2"
                    android:hint="Passwort"
                    android:backgroundTint="#ffffff"
                    android:textColorHint="#ffffff"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Anmelden"
                android:id="@+id/button"
                android:background="#37a9e3"
                android:textColor="#ffffff"
                style="@style/Base.Widget.AppCompat.Button.Borderless" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAlignment="center"
                android:gravity="center|bottom"
                android:layout_gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Noch nicht angemeldet?"
                    android:id="@+id/textView"
                    android:textAlignment="textEnd"
                    android:textColor="#ffffff"
                    android:gravity="center|bottom"
                    android:layout_gravity="bottom" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Registrieren"
                    android:id="@+id/textView2"
                    android:textAlignment="textStart"
                    android:gravity="center|bottom"
                    android:textColor="#255fb6"
                    android:paddingStart="2pt"
                    android:layout_gravity="bottom" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
