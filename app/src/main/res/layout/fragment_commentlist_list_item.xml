<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:id="@+id/fragment_commentlist_list_item_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datum"
        android:id="@+id/fragment_commentlist_list_item_date"
        android:layout_below="@+id/fragment_commentlist_list_item_name"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_commentlist_list_item_content"
        android:layout_below="@+id/fragment_commentlist_list_item_date"
        android:layout_alignParentStart="true" />

</RelativeLayout>
