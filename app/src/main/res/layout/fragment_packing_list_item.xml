<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/rectangle"
    android:layout_height="80dp"
    android:padding="8dp"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_weight="0.5"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="22dp"
            android:id="@+id/fragment_packing_list_item_checkbox"
            android:background="@drawable/checkbox_empty"
            android:layout_below="@+id/id"
            android:layout_gravity="center_vertical"
            android:layout_alignParentStart="true"
            android:layout_marginRight="8dp"
            android:checked="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_gravity="center_vertical"
            android:textSize="18dp"
            android:id="@+id/fragment_packing_list_item_title" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="wrap_content"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:id = "@+id/fragment_packing_list_item_icon_4">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="0dp"
                    android:id="@+id/fragment_packing_list_item_icon_circle_4"
                    android:background="@drawable/circle" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:layout_gravity="center_horizontal|center"
                    android:textColor = "#FFFFFF"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:textSize="18dp"
                    android:id="@+id/fragment_packing_list_item_icon_initial_4"
                    android:layout_alignParentStart="true"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:visibility="invisible"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content"
                android:id = "@+id/fragment_packing_list_item_icon_3">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="0dp"
                    android:id="@+id/fragment_packing_list_item_icon_circle_3"
                    android:background="@drawable/circle" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:layout_gravity="center_horizontal|center"
                    android:textColor = "#FFFFFF"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:textSize="18dp"
                    android:id="@+id/fragment_packing_list_item_icon_initial_3"
                    android:layout_alignParentStart="true"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:visibility="invisible"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content"
                android:id = "@+id/fragment_packing_list_item_icon_2">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="0dp"
                    android:id="@+id/fragment_packing_list_item_icon_circle_2"
                    android:background="@drawable/circle" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:layout_gravity="center_horizontal|center"
                    android:textColor = "#FFFFFF"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:textSize="18dp"
                    android:id="@+id/fragment_packing_list_item_icon_initial_2"
                    android:layout_alignParentStart="true"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:visibility="invisible"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content"
                android:id = "@+id/fragment_packing_list_item_icon_1">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="0dp"
                    android:id="@+id/fragment_packing_list_item_icon_circle_1"
                    android:background="@drawable/circle" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:visibility="invisible"
                    android:layout_gravity="center_horizontal|top"
                    android:textColor = "#FFFFFF"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:textSize="18dp"
                    android:id="@+id/fragment_packing_list_item_icon_dots_1"
                    android:layout_alignParentStart="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:layout_gravity="center_horizontal|center"
                    android:textColor = "#FFFFFF"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:textSize="18dp"
                    android:id="@+id/fragment_packing_list_item_icon_initial_1"
                    android:layout_alignParentStart="true"
                    />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:text="0/0"
        android:textSize="14dp"
        android:id="@+id/fragment_packing_list_item_number_packed_items" />
</LinearLayout>


