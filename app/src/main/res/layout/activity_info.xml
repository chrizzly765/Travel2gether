<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="de.traveltogether.info.InfoActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/activity_info_infobox"
        android:padding="16dp">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="21dp"
        android:id="@+id/activity_info_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="-2dp"
                android:layout_height="14dp"
                android:src="@mipmap/ic_place_grey"
                />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/activity_info_destination"
        android:layout_below="@+id/activity_info_title"
        android:layout_alignParentStart="true" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color37a9e3"
                android:id="@+id/activity_info_start_label"
                android:layout_alignParentStart="true" />
            <TextView
                android:paddingLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/activity_info_startdate" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color37a9e3"
                android:id="@+id/activity_info_end_label"
                android:layout_alignParentStart="true" />
            <TextView
                android:paddingLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/activity_info_enddate" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="8dp"
        android:id="@+id/activity_info_description"
        android:layout_below="@+id/activity_info_startdate"
        android:layout_alignParentStart="true" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="24dp"
        android:layout_below="@id/activity_info_infobox"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        android:background="#afddf4"
        android:id="@+id/activity_info_devider_active">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingLeft="16dp"
            android:layout_gravity="center_vertical"
            android:textColor="#37a9e3"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id = "@+id/activity_info_fragment_container_active"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_info_devider_active"
        android:paddingTop="0dp"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="24dp"
        android:layout_below="@id/activity_info_fragment_container_active"
        android:layout_marginTop="8dp"
        android:background="#afddf4"
        android:visibility="invisible"
        android:id="@+id/activity_info_devider_invited">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingLeft="16dp"
            android:layout_gravity="center_vertical"
            android:textColor="#37a9e3"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id = "@+id/activity_info_fragment_container_invited"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_info_devider_invited"
        android:paddingTop="0dp"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="24dp"
        android:layout_below="@id/activity_info_fragment_container_invited"
        android:layout_marginTop="8dp"
        android:background="#afddf4"
        android:visibility="invisible"
        android:id="@+id/activity_info_devider_resigned">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingLeft="16dp"
            android:layout_gravity="center_vertical"
            android:textColor="#37a9e3"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id = "@+id/activity_info_fragment_container_resigned"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_info_devider_resigned"
        android:paddingTop="0dp"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_below="@+id/activity_info_fragment_container_resigned"
        android:id="@+id/activity_info_button_add_box"
        android:layout_height="wrap_content">
    <ImageButton
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/activity_info_button_add"
        android:background="@drawable/circle_light_grey"
        android:src="@mipmap/ic_add" />
    </RelativeLayout>

</RelativeLayout>