<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="de.traveltogether.info.InfoActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="21dp"
        android:id="@+id/activity_info_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/activity_info_destination"
        android:layout_below="@+id/activity_info_title"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_weight="1"
        android:id="@+id/activity_info_startdate"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_weight="1"

        android:id="@+id/activity_info_enddate" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/activity_info_description"
        android:layout_below="@+id/activity_info_startdate"
        android:layout_alignParentStart="true" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="24dp"
        android:layout_below="@id/activity_info_description"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        android:background="#afddf4"
        android:id="@+id/activity_info_devider_active">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mitreisende"
            android:paddingLeft="16dp"
            android:layout_gravity="center_vertical"
            android:textColor="#37a9e3"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id = "@+id/activity_info_fragment_container_active"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_info_devider_active"
        android:paddingTop="0dp"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="24dp"
        android:layout_below="@id/activity_info_fragment_container_active"
        android:layout_marginTop="8dp"
        android:background="#afddf4"
        android:visibility="invisible"
        android:id="@+id/activity_info_devider_invited">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eingeladen"
            android:paddingLeft="16dp"
            android:layout_gravity="center_vertical"
            android:textColor="#37a9e3"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id = "@+id/activity_info_fragment_container_invited"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_info_devider_invited"
        android:paddingTop="0dp"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="24dp"
        android:layout_below="@id/activity_info_fragment_container_invited"
        android:layout_marginTop="8dp"
        android:background="#afddf4"
        android:visibility="invisible"
        android:id="@+id/activity_info_devider_resigned">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ausgetreten"
            android:paddingLeft="16dp"
            android:layout_gravity="center_vertical"
            android:textColor="#37a9e3"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id = "@+id/activity_info_fragment_container_resigned"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_info_devider_resigned"
        android:paddingTop="0dp"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" />

    <ImageButton
        android:id="@+id/activity_info_button_add"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/activity_info_fragment_container_resigned"
        android:background="@drawable/circle_light_grey"
        android:src="@mipmap/ic_add" />

</LinearLayout>