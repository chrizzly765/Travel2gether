<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="de.traveltogether.options.profilesettings.ProfileSettingsActivity">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/circle"
        app:srcCompat="@drawable/user_shape" />

    <EditText
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="4dp"
        android:textSize="18dp"
        android:gravity="center_horizontal"
        android:hint="Name"
        android:enabled="false"
        android:id="@+id/activity_profile_settings_name"
        android:layout_alignParentTop="true"/>
    <EditText
        android:text="E-Mail"
        android:hint="E-Mail"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:padding="4dp"
        android:enabled="false"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_profile_settings_mail" />


</LinearLayout>
