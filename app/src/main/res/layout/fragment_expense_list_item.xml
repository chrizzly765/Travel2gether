<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:background="@drawable/rectangle">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Titel"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:textSize="18dp"
            android:layout_weight="1"
            android:lines="1"
            android:id="@+id/fragment_expense_list_item_title" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="4dp">


            <FrameLayout
                android:layout_width="wrap_content"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:id = "@+id/fragment_expense_list_item_icon_3"
                android:paddingRight="4dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/fragment_expense_list_item_icon_circle_3"
                    android:background="@drawable/circle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center_horizontal|center"
                    android:textColor = "#FFFFFF"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="4dp"
                    android:textSize="18dp"
                    android:id="@+id/fragment_expense_list_item_icon_initial_3"
                    android:layout_alignParentStart="true"
                    />

            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:id = "@+id/fragment_expense_list_item_icon_2"
                android:paddingRight="4dp"
                android:paddingLeft="4dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/fragment_expense_list_item_icon_circle_2"
                    android:background="@drawable/circle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center_horizontal|center"
                    android:textColor = "#FFFFFF"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="4dp"
                    android:textSize="18dp"
                    android:id="@+id/fragment_expense_list_item_icon_initial_2"
                    android:layout_alignParentStart="true"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:id = "@+id/fragment_expense_list_item_icon_1"
                android:paddingRight="4dp"
                android:paddingLeft="4dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/fragment_expense_list_item_icon_circle_1"
                    android:background="@drawable/circle" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:visibility="invisible"
                    android:layout_gravity="center_horizontal|center"
                    android:textColor = "#FFFFFF"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:textSize="18dp"
                    android:id="@+id/fragment_expense_list_item_icon_dotdotdot_1"
                    android:layout_alignParentStart="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center_horizontal|center"
                    android:textColor = "#FFFFFF"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="4dp"
                    android:textSize="18dp"
                    android:id="@+id/fragment_expense_list_item_icon_initial_1"
                    android:layout_alignParentStart="true"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:id = "@+id/fragment_expense_list_item_icon_last"
                android:paddingLeft="4dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/fragment_expense_list_item_icon_circle_last"
                    android:background="@drawable/circle" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:visibility="visible"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:id="@+id/fragment_expense_list_item_payer_icon_last">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/circle"
                        android:id="@+id/fragment_expense_list_item_payer_icon_circle_last"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="€"
                        android:layout_gravity="center_horizontal|center"
                        android:textColor = "#FFFFFF"
                        android:layout_marginTop= "2dp"
                        android:textSize="11dp"
                        android:layout_alignParentStart="true"
                        />

                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center_horizontal|center"
                    android:textColor = "#FFFFFF"
                    android:layout_marginLeft="-2dp"
                    android:layout_marginTop="4dp"
                    android:textSize="18dp"
                    android:id="@+id/fragment_expense_list_item_icon_initial_last"
                    android:layout_alignParentStart="true"
                    />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:text="100,00 €"
        android:textSize="18dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/fragment_expense_list_item_title"
        android:id="@+id/fragment_expense_list_item_amount"
        android:layout_alignBottom="@+id/id"
        android:layout_alignParentStart="true" />

</LinearLayout>
