<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="110dp"
    android:background="@drawable/rectangle"
    android:padding="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:id="@+id/fragment_trip_list_item_title"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:textSize="18dp"
                android:layout_gravity="center_vertical|left"
                android:textColor="#000000"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="clip_vertical|right"
                android:layout_gravity="center_vertical|right">

                <TextView android:id="@+id/fragment_trip_list_item_date"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="14dp"
                android:layout_gravity="center_vertical|right"
                android:textColor="#000000"
                android:gravity="center_vertical|right" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!--
    <TextView android:id="@+id/fragment_trip_list_item_description"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_height="20dp"
        android:layout_width="match_parent"
        />
    -->
    <TextView android:id="@+id/fragment_trip_list_item_destination"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_height="20dp"
        android:layout_width="match_parent"
        />

