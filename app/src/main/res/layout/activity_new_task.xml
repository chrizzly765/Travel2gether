<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.traveltogether.tasks.newtask.NewTaskActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_new_task_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:hint = "@string/title"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_new_task_description"
            android:hint = "@string/description"
            android:layout_below="@+id/activity_new_task_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_new_task_date"
            android:hint = "Datum"
            android:layout_below="@+id/activity_new_task_description"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zuweisen zu"
            android:id="@+id/activity_new_task_assigned_to"
            android:layout_below="@+id/activity_new_task_date"
            android:layout_alignParentStart="true"
            android:textSize="18dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_assigned_to"
            android:layout_marginStart="80dp"
            android:layout_below="@+id/activity_new_task_date"
            android:layout_toEndOf="@+id/activity_new_task_assigned_to"
            android:layout_alignBottom="@+id/activity_new_task_assigned_to" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:id="@+id/activity_new_task_status"
            android:layout_below="@+id/activity_new_task_assigned_to"
            android:layout_alignParentStart="true"
            android:textSize="18dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_status"
            android:layout_marginStart="80dp"
            android:layout_below="@+id/activity_new_task_assigned_to"
            android:layout_toEndOf="@+id/activity_new_task_status"
            android:layout_alignBottom="@+id/activity_new_task_status" />

    </RelativeLayout>

</RelativeLayout>
