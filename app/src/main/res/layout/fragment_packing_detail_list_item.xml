<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_weight="0.1"
        android:layout_marginStart="8dp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/fragment_packing_detail_list_item_icon"
        android:layout_gravity="center_horizontal|left">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/fragment_packing_detail_list_item_circle"
            android:background="@drawable/circle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N"
            android:layout_gravity="center_horizontal|center"
            android:textColor = "#FFFFFF"
            android:layout_marginLeft="0dp"
            android:textSize="18dp"
            android:id="@+id/fragment_packing_detail_list_item_initial"
            android:layout_alignParentStart="true"
            />
    </FrameLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Name"
        android:id="@+id/fragment_packing_detail_list_item_name"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:textSize="21dp" />

    </LinearLayout>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="22dp"
        android:id="@+id/fragment_packing_detail_list_item_checkBox"
        android:background="@drawable/checkbox_empty"
        android:layout_below="@+id/id"
        android:layout_gravity="center_vertical"
        android:layout_alignParentStart="true"
        android:layout_marginRight="8dp"
        android:checked="false" />

</LinearLayout>
