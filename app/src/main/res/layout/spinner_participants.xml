<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/spinner_participants_name"
        android:layout_marginStart="8dp"
        android:layout_alignBottom="@+id/spinner_participants_icon"
        android:layout_toEndOf="@+id/spinner_participants_icon"
        android:textSize="14dp" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_participants_icon"
        android:src="@drawable/abc_scrubber_control_to_pressed_mtrl_005" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N"
        android:textColor = "#FFFFFF"
        android:layout_marginLeft="4dp"
        android:id="@+id/spinner_participants_initial"
        android:layout_alignParentStart="true" />
    </FrameLayout>

</RelativeLayout>