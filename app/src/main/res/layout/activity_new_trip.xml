<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.traveltogether.triplist.newtrip.NewTripActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newTrip_title"
        android:clickable="false"
        android:editable="true"
        android:enabled="true"
        android:hint="Titel der Reise"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/newTrip_button_save" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/newTrip_startDate"
        android:enabled="true"
        android:hint="Startdatum"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/newActivity_description"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/newTrip_endDate"
        android:layout_alignParentStart="true"
        android:hint="Enddatum"
        android:layout_below="@+id/newTrip_startDate"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newTrip_description"
        android:hint="Beschreibung"
        android:layout_below="@+id/newActivity_title"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/newActivity_title" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/newTrip_place"
        android:layout_below="@+id/newTrip_endDate"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp"
        android:hint="Ort" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABBRECHEN"
        android:id="@+id/newTrip_button_cancel"
        android:layout_below="@+id/newTrip_place"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPEICHERN"
        android:id="@+id/newTrip_button_save"
        android:layout_alignBottom="@+id/newTrip_button_cancel"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_datepicker_start"
        android:layout_alignTop="@+id/newTrip_startDate"
        android:layout_alignStart="@+id/newTrip_button_save"
        android:backgroundTint="@color/abc_background_cache_hint_selector_material_light"
        android:src="@android:drawable/ic_menu_today"
        android:layout_toStartOf="@+id/button_datepicker_end"
        android:layout_above="@+id/button_datepicker_end"
        android:layout_alignEnd="@+id/button_datepicker_end" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_datepicker_end"
        android:src="@android:drawable/ic_menu_today"
        android:backgroundTint="@color/abc_background_cache_hint_selector_material_light"
        android:layout_above="@+id/newTrip_place"
        android:layout_alignStart="@+id/newTrip_button_save" />

</RelativeLayout>
