<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.traveltogether.packinglist.packingdetail.PackingDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_packing_detail_box_details"
        android:layout_margin="@dimen/activity_horizontal_margin"
        >

        <LinearLayout
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:orientation="horizontal"
            android:id="@+id/activity_packing_detail_countbox"
            android:layout_alignParentStart="true"
            android:background="@drawable/checkbox_empty_blue">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                android:id="@+id/activity_packing_detail_count"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/activity_packing_detail_countbox"
            android:layout_marginStart="8dp"
            android:id="@+id/activity_packing_detail_title"
            android:layout_alignParentTop="true"
            android:text="Title"
            android:textSize="21dp"
            android:layout_alignParentEnd="true"
            android:clickable = "false"
            >
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_packing_detail_description"
            android:text=""
            android:clickable = "false"
            android:layout_below="@+id/activity_packing_detail_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">
        </TextView>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="24dp"
        android:background="#afddf4"
        android:layout_below="@+id/activity_packing_detail_box_details">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wird eingepackt von"
            android:id="@+id/textView"
            android:paddingLeft="16dp"
            android:layout_gravity="center_vertical"
            android:textColor="#37a9e3"
            android:textSize="14dp" />


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below = "@+id/activity_packing_detail_box_details"
        android:layout_marginTop="30dp"
        android:id="@+id/activity_packing_detail_list_container"/>

</RelativeLayout>
